# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_USER=your_db_user
MONGO_PASSWORD=your_db_password
DATABASE_NAME=genzpulse

# API Configuration
# PORT is automatically set by Cloud Run, but you can override locally
PORT=8080
API_HOST=0.0.0.0

# JWT Authentication (REQUIRED - generate a strong secret key)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080  # 7 days

# Groq API (REQUIRED)
GROQ_API_KEY=your_groq_api_key_here

# Google OAuth (REQUIRED for OAuth login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-backend-url.run.app/api/auth/google/callback

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=https://your-frontend-url.app,https://www.your-frontend-url.app

# Frontend URL (for OAuth redirects after login)
FRONTEND_URL=https://your-frontend-url.app
